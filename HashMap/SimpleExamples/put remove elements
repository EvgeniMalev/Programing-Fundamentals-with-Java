import java.util.HashMap;

public class Main
{
  public static void main (String[]args)
  {

    HashMap < String, String > countries = new HashMap < String, String > ();

    // Add keys and values (Country, Continent)
    countries.put ("New Zeland", "Australia");
    countries.put ("Germany", "Europe");
    countries.put ("Kongo", "Africa");
    countries.put ("USA", "North America");
    countries.put ("Brazil", "South America");
    countries.remove ("Brazil", "South America");
    // countries.clear();
    System.out.println (countries);
  }
}
